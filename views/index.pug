extends ./layout.pug

block contenido
	form(action="/" id="formulario" method="POST")
		div(class="row justify-content-center formLogin")
			div(class="col-auto")
				input(type="text" class="form-control" name="idUsuario" placeholder="Usuario" autofocus)
			div(class="col-auto")
				input(type="password" class="form-control" name="claveUsuario" placeholder="Contraseña")
			div(class="col-auto")
				input(type="submit" value="Inciar sesión" class="btn btn-primary")
	div(class="separar")
	div(class='container')
		div(class='col-sm-12')
			div(class="row")
				div(class="col-4")
					div(class="list-group" id="list-tab" role="tablist")
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-inicial-list" data-toggle="list" href="#list-inicial" role="tab" aria-controls="inicial") Instrucciones
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-iecascajal-list" data-toggle="list" href="#list-iecascajal" role="tab" aria-controls="iecascajal") Institución Educativa Cascajal
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-sede1-list" data-toggle="list" href="#list-sede1" role="tab" aria-controls="sede1") Sede El Tobo
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-sede2-list" data-toggle="list" href="#list-sede2" role="tab" aria-controls="sede2") Sede La Piragua
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-sede3-list" data-toggle="list" href="#list-sede3" role="tab" aria-controls="sede3") Sede Paquies
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-sede4-list" data-toggle="list" href="#list-sede4" role="tab" aria-controls="sede4") Sede La Esperanza
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-sede5-list" data-toggle="list" href="#list-sede5" role="tab" aria-controls="sede5") Sede La Florida
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-sede6-list" data-toggle="list" href="#list-sede6" role="tab" aria-controls="sede6") Sede Mateo Rico
				div(class="col-8")
					div(class="tab-content" id="nav-tabContent")
						div(class="tab-pane fade show" id="list-inicial" role="tabpanel" aria-labelledby="list-inicial-list")
							h3 Bienvenido(a)
							hr
							h5 Pasos
							p 1) Seleccionar la sede en la cual realizar las elecciones
							p 2) Seleccionar el grado
							p 3) Buscar el estudiante por número de identificación
							p 4) Dar clic en el botón con el Numero de identificación Ej: 
								span(class="badge badge-info") 12123456
						div(class="tab-pane fade show active" id="list-iecascajal" role="tabpanel" aria-labelledby="list-iecascajal-list")
							h5(class="centrar") Institución Educativa Cascajal
							p Seleccione un grado
							form(action="/votarIECascajal" method="POST")
								div(class="row")
									div(data-toggle="radio" class="grupoGrados")
										input(type="submit" class="btn select" value="GRADO 0" id="grado0" name="gradosIECascajal" required)
