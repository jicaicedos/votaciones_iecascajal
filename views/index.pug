extends ./layout.pug

block contenido
	form(action="/" id="formulario" method="POST")
		div(class="row justify-content-center formLogin")
			div(class="col-auto")
				input(type="text" class="form-control" name="idUsuario" placeholder="Usuario" autofocus)
			div(class="col-auto")
				input(type="password" class="form-control" name="claveUsuario" placeholder="Contraseña")
			div(class="col-auto")
				input(type="submit" value="Inciar sesión" class="btn btn-primary")
	div(class='container')
		div(class='col-sm-12')
			div(class="separar")
			h3(class="centrar") Bienvenido a las votaciones Institución Educativa Cascajal
			div(class="separar")
			div(class="row")
				div(class="col-4")
					div(class="list-group" id="list-tab" role="tablist")
						a(class="list-group-item list-group-item-action seleccionSedes" id="list-inicial-list" data-toggle="list" href="#list-inicial" role="tab" aria-controls="inicial") Instrucciones
				div(class="col-8")
					div(class="tab-content" id="nav-tabContent")
						div(class="tab-pane fade show active" id="list-inicial" role="tabpanel" aria-labelledby="list-inicial-list")
							h3 Bienvenido(a)
							hr
							h5 Pasos
							p Iniciar sesión con el usuario y contraseña dados por el Administrador
							p Seleccionar el grado
							p Buscar el estudiante por número de identificación
							p Dar clic en el botón con el Numero de identificación Ej: 
								span(class="badge badge-info badge-tamano") 12123456
